<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="C:\Logs\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>      
    
  <target xsi:type="File" name="ownFile-web" fileName="C:\Logs\SharedMemories-${shortdate}.log"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}${exception:format=tostring}|
                    User Identity: ${aspnet-user-identity}|
                    Request URL: ${aspnet-request-url}"/>
  </targets>

  <!--<targets>
      <target xsi:type="File" name="ownFile-web" fileName="C:\Logs\nlog-SharedMemoriesAPI-${shortdate}.log"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}${exception:format=tostring}|
                    User Identity: ${aspnet-user-identity}|
                    Request URL: ${aspnet-request-url}|
                    Request Method: ${aspnet-request-method}|
                    User Agent: ${aspnet-request-useragent}|
                    Client IP: ${aspnet-request-ip}|
                    Referrer: ${aspnet-request-referrer}|
                    MVC Action: ${aspnet-mvc-action}|
                    Controller: ${aspnet-mvc-controller}|
                    Route Data: ${aspnet-request-routeparameters}|
                    Custom Property: ${mdlc:item=myCustomProperty}" />
  </targets>-->


  <!-- rules to map from logger name to target -->
  <rules>
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    
    <!-- BlackHole without writeTo -->
    <logger name="*" minlevel="Trace" writeTo="ownFile-web" />
  </rules>
</nlog>